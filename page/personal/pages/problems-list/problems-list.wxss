@import "../../../common/index.wxss";
.page{
  padding: 5rpx 30rpx 30rpx 40rpx;
}

.page-ft {
  padding-bottom: 20rpx;
  text-align: center;
}

.page-desc {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}


.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #F5F5F5;
  line-height: 1.01176471;
  font-size: 26rpx;

  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #FFFFFF;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 50rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}


.problems-list-item {
  background-color: #FFFFFF;
  border-top: 1rpx solid #D8D8D8;
}
.problems-list-item:first-child {
  margin-top: 0;
}
.problems-list-text{
  flex: 1;
}

.problems-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}
.problems-list-item-hd-show {
  opacity: .2;
}
.problems-list-item-bd {
  height: 0;
  overflow: hidden;
}
.problems-list-item-bd-show {
  height: auto;
}
.problems-list-item-arrow{
  padding-right: 50rpx;
  position: relative;
}
.problems-list-item-arrow:after{
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position:absolute;
  top: 50%;
  margin-top: -65rpx;
  right: 28rpx;
  
}