<view class="index">
<image class="index-logo" src="../../image/background.png"></image>
  <view class="index-hd">
    <image class="index-logo" src="resources/kind/logo.png"></image>
    <view class="index-desc">Turtlebone</view>
  </view>
  <view class="index-bd">
    <view>
      <navigator url="pages/tab/tab" class="navigator">
          <view class="navigator-text">Tab</view>
          <view class="navigator-arrow"></view>
      </navigator>
    </view>
    <view>
      <p>{{openId}}</p>
    </view>
    <view wx:if="{{openId.length>0}} " class="kind-list">
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <view class="kind-list-item">
          <view id="{{item.id}}" class="kind-list-item-hd {{item.open ? 'kind-list-item-hd-show' : ''}}" bindtap="kindToggle">
            <view class="kind-list-text">{{item.name}}</view>
            <image class="kind-list-img" src="resources/kind/{{item.id}}.png"></image>
          </view>
          <view class="kind-list-item-bd {{item.open ? 'kind-list-item-bd-show' : ''}}">
            <view class="navigator-box {{item.open ? 'navigator-box-show' : ''}}">
              <block wx:for-items="{{item.pages}}" wx:for-item="page" wx:key="*item">
                <navigator wx:if="{{item.category}}" url="pages/{{item.category}}/{{page.name}}" class="navigator">
                  <view class="navigator-text">{{page.label}}</view>
                  <view class="navigator-arrow"></view>
                </navigator>
                <navigator wx:else url="pages/{{page.name}}/{{page.name}}" class="navigator">
                  <view class="navigator-text">{{page.label}}</view>
                  <view class="navigator-arrow"></view>
                </navigator>
              </block>
            </view>
          </view>
        </view>
      </block>
    </view>
    <view wx:else>
      Login first
    </view>
  </view>
</view>